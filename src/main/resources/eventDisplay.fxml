<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #00aeff, #008cff);" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.autismo.controllers.EventDisplay">
    <children>
        <HBox spacing="10" style="-fx-padding: 20;">
            <VBox alignment="CENTER_LEFT" spacing="10">
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="titleLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 24px; -fx-text-fill: white;" />
                </HBox>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="typeLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white;" />
                </HBox>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white;" text="Description:" />
                    <Label fx:id="descriptionArea" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white;" />

                </HBox>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="startDateLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white;" />
                </HBox>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="endDateLabel" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white;" />
                </HBox>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button onMouseClicked="#addDon" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #4CAF50;" text="Add Don" />
                    <Button onMouseClicked="#participateButton" style="-fx-font-family: 'Roboto'; -fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #ff5722;" text="Participate" />
                </HBox>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <ImageView fx:id="imageView" fitHeight="400" fitWidth="400" preserveRatio="true" style="-fx-border-color: white; -fx-border-width: 1px;" />
            </HBox>
        </HBox>
    </children>
    <VBox.margin>
        <Insets bottom="20" left="20" right="20" top="20" />
    </VBox.margin>
</AnchorPane>
