<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.autismo.controllers.PaymentController">
    <TextField fx:id="cardNumberField" promptText="Card Number" />
    <TextField fx:id="expMonthField" promptText="Expiration Month" />
    <TextField fx:id="expYearField" promptText="Expiration Year" />
    <TextField fx:id="cvcField" promptText="CVC" />
    <TextField fx:id="amountField" promptText="Amount" />
    <Button fx:id="payButton" text="Pay" />
    <Text fx:id="statusText" />
</VBox>