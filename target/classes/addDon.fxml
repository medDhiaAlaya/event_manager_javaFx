<AnchorPane prefHeight="538.0" prefWidth="841.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.autismo.controllers.AddDon">
    <!-- Background Rectangle -->
    <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#f4f4f4" height="538.0" width="841.0" />

    <!-- Title Text -->
    <Text layoutX="25.0" layoutY="30.0" stroke="BLACK" strokeWidth="0.5" text="Ajouter un don" textAlignment="CENTER">
        <font>
            <Font name="Arial" size="24.0" />
        </font>
    </Text>

    <!-- GridPane for Form Elements -->
    <GridPane hgap="10" layoutX="25.0" layoutY="70.0" prefHeight="356.0" prefWidth="791.0" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
        </rowConstraints>
        <!-- Labels -->
        <Label text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Prenom" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="mantnat" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="message" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <!-- TextFields -->
        <TextField fx:id="tfNom" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="tfPrenom" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <!-- Buttons -->
        <Button fx:id="addButton" onAction="#add_button" prefHeight="26.0" prefWidth="355.0" text="Ajouter" GridPane.rowIndex="6" />
      <TextField fx:id="tfArgent" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="tfMessage" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="cancelButton" onAction="#add_button" prefHeight="26.0" prefWidth="439.0" text="Annuler" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </GridPane>
</AnchorPane>
